{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "ES2022",
    "moduleResolution": "bundler",

    // "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}